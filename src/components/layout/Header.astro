---
const { title, description } = Astro.props;
---
<header class="container">
  <h1>{title}</h1>
  <p>{description}</p>
</header>

<style lang="scss">
  h1 {
    font-family: var(--font-mono);
    font-size: 2em;
    color: var(--color-highlight-one);
    margin-bottom: 1rem;
  }

  header{
    border-bottom: 1px solid var(--color-light);
  }
</style>
