---
import { getLowQualityUrl, getHighQualityUrl } from "../../utils/cloudinary";

const {title, description, heroImage, pubDate, readTime, draft} = Astro.props;
---

<header class="">
  {draft === true && <blockquote><p><b>This post is a draft</b> <br />If you have feedback please reach out!</p></blockquote>}
  {pubDate && (
    <small>
      {pubDate && (<>Published on {pubDate.toLocaleString('en-GB', {timezone: 'UTC'})} <span>&#8212;</span> </>)}
      {readTime}
    </small>
  )}
  <section>
    <h1>{title}</h1>
    <p>{description}</p>
  </section>
  {heroImage && <img 
    src={getLowQualityUrl(heroImage) || ''} 
    class="lazy loading"
    width="608"
    height="405"
    data-lazy={getHighQualityUrl(heroImage) || ''}
    alt={`decorative image for ${title}`}> }
</header>

<style lang="scss">
  small{
    display: block;
    margin: var(--size-6) 0 0 0;
  }  
  span {
    margin: 0 var(--size-2);
  }
</style>