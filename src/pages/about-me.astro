  <script>
    document.addEventListener('DOMContentLoaded', () => {
      console.log('dom content was loaded...')
      const carouselEl = document.querySelector('.about-carousel');
      const carousel = new Flickity( carouselEl, {
        autoPlay: true,
        imagesLoaded: true, 
        percentPosition: false,
        wrapAround: true,
        resize: true,
      });
    })
  </script>
  </>
}>
    <div class="about-carousel">
      <img src="https://assets.codepen.io/1490503/mykal-6.jpg"  alt="">
